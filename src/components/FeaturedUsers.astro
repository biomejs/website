---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import { LinkButton } from "@astrojs/starlight/components";

const allUsers = await getCollection("users");
const featuredUsers = allUsers.filter((user) => user.data.featured);
const title = Astro.locals.t("users.featured.title");
const description = Astro.locals.t("users.featured.description");
---

<div class="featured-users">
	<h2>{title}</h2>
	<p>{description}</p>
	<div class="featured-users-grid">
		{
			featuredUsers.map((user) => (
				<div class="featured-user-card">
					<Image
						src={user.data.logo}
						alt={`${user.data.id} logo`}
						width={64}
						height={64}
						loading="lazy"
					/>
					<span class="user-name">{user.data.id}</span>
				</div>
			))
		}
	</div>
	<LinkButton href="/users" style="margin: 0">
		View all users
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="16"
			height="16"
			viewBox="0 0 24 24"
			fill="none"
			stroke="currentColor"
			stroke-width="2"
			stroke-linecap="round"
			stroke-linejoin="round"
		>
			<path d="M5 12h14"></path>
			<path d="m12 5 7 7-7 7"></path>
		</svg>
	</LinkButton>
</div>

<style>
	.featured-users {
		margin: 4rem auto;
		padding: 0 1rem;
		text-align: center;
	}

	.featured-users-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(min(150px, 100%), 1fr));
		gap: 1.5rem;
		margin-bottom: 3rem;
		align-items: start;
	}

	@media (min-width: 768px) {
		.featured-users-grid {
			grid-template-columns: repeat(5, 1fr);
			grid-auto-rows: 1fr;
			gap: 2rem;
		}
	}

	.featured-user-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-start;
		gap: 0.75rem;
		padding: 1.5rem;
		border-radius: 12px;
		box-sizing: border-box;
		margin: 0 !important;
		width: 100%;
		min-width: 0;
	}

	.featured-user-card img,
	.featured-user-card :global(img) {
		width: 64px;
		height: 64px;
		border-radius: 50%;
		object-fit: cover;
		flex-shrink: 0;
		margin: 0;
	}

	.user-name {
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--sl-color-text);
		text-align: center;
		line-height: 1.4;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		margin: 0;
	}
</style>
