{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "biomejs/website",
    "branch": "main",
    "hosting": "github"
  },
  "dashboard": {
    "title": "Biome i18n dashboard",
    "favicon": {
      "external": [
        {
          "link": "https://biomejs.dev/favicon.svg",
          "type": "image/svg+xml"
        }
      ]
    }
  },
  "files": [
    {
      "location": "src/content/docs/**/*.{md,mdx}",
      "pattern": "src/content/docs/@lang/@path",
      "type": "universal",
      "ignore": [
        "node_modules",
        "dist",
        "src/content/docs/linter/rules/*.{mdx,md}",
        "src/content/docs/assist/actions/*.{mdx,md}",
        "src/content/docs/blog/*.{md,mdx}",
        "src/content/docs/blog/internals/changelog.{md,mdx}",
        "src/content/docs/blog/internals/changelog_v1.{md,mdx}"
      ]
    }
  ],
  "defaultLocale": {
    "label": "English",
    "lang": "en"
  },
  "locales": [
    {
      "label": "Español",
      "lang": "es"
    },
    {
      "label": "Français",
      "lang": "fr"
    },
    {
      "label": "日本語",
      "lang": "ja"
    },
    {
      "label": "简体中文",
      "lang": "zh-CN"
    },
    {
      "label": "Português",
      "lang": "pt-BR"
    },
    {
      "label": "Українська",
      "lang": "uk"
    }
  ]
}
